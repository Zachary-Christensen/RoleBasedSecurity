@page
@model RoleBasedSecurityApp.Areas.Identity.Pages.Account.DemoSignInModel
@{
    ViewData["Title"] = "DemoSignIn";
    var roles = (List<IdentityRole>)ViewData["Roles"];
}


<h1>@ViewData["Title"]</h1>

<div class="container">
    <div class="row">
        <div class="col-md-4">
            <section>
                <form id="account" method="post">
                    <h4>Login with a Demo account.</h4>
                    <hr />
                    <div asp-validation-summary="All" class="text-danger"></div>
    
                    <div class="form-group">
                        <label asp-for="Input.Role"></label>
                        <select asp-for="Input.Role" class="form-control" asp-items='@(new SelectList(roles, "Name", "Name"))'></select>
                        <span asp-validation-for="Input.Role" class="text-danger"></span>
                    </div>
    
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary">Log in</button>
                    </div>
    
                </form>
            </section>
        </div>
    </div>
</div>

